<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="SimpleFormChangeColumn__threeGroups234"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="6"
            labelSpanL="7"
            labelSpanM="6"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="2"
            columnsL="4"
            columnsXL="4"
            singleContainerFullSize="false"
        >
            <f:content>
                <core:Title text=" " />
                <Label text="Esercizio di Gestione" required="true" />

                <ComboBox id="mese1">
                    <core:Item id="mese2" key="{respModel>matricola}"
                        text="{respModel>cognome} {respModel>nome} {respModel>matricola}" />
                </ComboBox>

                <Label text="N. Decreto" class="sapUiTinyMarginBottom"
                    labelFor="inputDecreto" />

                <Input id="inputDecreto" type="Text" showValueHelp="true"
                    enabled="true" editable="true" />
                <core:Title text=" " />

                <Label text="Amministrazione" class="sapUiTinyMarginBottom"/>
                <Input id="inputAmm" type="Text" enabled="true" showValueHelp="true"/>

                <Label text="IPE" class="sapUiTinyMarginBottom" />

                <Input id="inputIPE" type="Text" showValueHelp="true" enabled="true"
                    editable="true" />
                <core:Title text=" " />
                <Label text="Ufficio I Livello" class="sapUiTinyMarginbottom" required="false" />

                <Input id="inputaUff" type="Text" enabled="true" showValueHelp="true" editable="true" />
                <Label text="N. Clausola" class="sapUiTinyMarginBottom" />
                <Input id="inputClaus" type="Text" enabled="true" showValueHelp="true"
                    editable="true" />
                    <core:Title text=" " />
                    <Label text="Ufficio II Livello" class="sapUiTinyMarginBottom" required="false"  />
                    <Input id="inputbUff" type="Text" enabled="true" showValueHelp="true"
                        editable="true" />
                    </f:content>
        </f:SimpleForm>
    
            <f:SimpleForm
            id="SimpleFormChangeColumn__threeGroups234-1"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="6"
            labelSpanL="7"
            labelSpanM="6"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="1"
            columnsL="1"
            columnsXL="1"
            singleContainerFullSize="false"
        >
        <f:content>
                <OverflowToolbar>
                    <ToolbarSpacer/>
                <Button type="Emphasized" id="Avvio" text="Avvio" press="onSearch"/>
            </OverflowToolbar>
        </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>