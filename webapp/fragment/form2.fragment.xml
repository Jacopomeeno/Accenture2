<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="BeneficiarioNI"
            title="Beneficiario Nota di Imputazione"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="6"
            labelSpanL="6"
            labelSpanM="6"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="2"
            columnsL="3"
            columnsXL="3"
            singleContainerFullSize="false"
        >
        <f:content>
            <core:Title text=" "/>
            <Label text="Beneficiario"/>
            <Input id="inputBeneficiario" type="Text" showValueHelp="true" suggestionItems="{path: '/HeaderNISet', sorter: { path: 'Lifnr' }}" enabled="true" editable="true">
                <core:Item key="{Lifnr}" text="{Lifnr}"/>
            </Input>
            <Label text="ModalitÃ  di Pagamento"/>
            <Input id="ModPagamento" type="Text" showValueHelp="true" enabled="true" editable="true"/>
                <!-- <core:Item key="{}" text="{}"/> -->
            <core:Title text=" "/>
            <Label text="Nome"/>
            <Input id="inputNome" type="Text" showValueHelp="true" enabled="true" editable="true"/>
            <Label text="IBAN"/>
            <Input id="inputIBAN" type="Text" showValueHelp="true" enabled="true" editable="true"/>
            <core:Title text=" "/>

        </f:content>
        </f:SimpleForm>
        <f:SimpleForm
            id="ImputazioneContabile"
            title="Imputazione Contabile"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="6"
            labelSpanL="6"
            labelSpanM="6"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="2"
            columnsL="3"
            columnsXL="3"
            singleContainerFullSize="false"
        >
        <f:content>
            <core:Title text=" "/>
            <Label text="Centro di Costo"/>
            <Input id="inputCentroCosto" type="Text" showValueHelp="true" suggestionItems="{path: '/HeaderNISet', sorter: { path: 'Kostl' }}" enabled="true" editable="true">
                <core:Item key="{Kostl}" text="{Kostl}"/>
            </Input>
            <Label text="Conto Co. Ge."/>
            <Input id="inputCoGe" type="Text" showValueHelp="true" suggestionItems="{path: '/HeaderNISet', sorter: { path: 'Saknr' }}" enabled="true" editable="true">
                <core:Item key="{Saknr}" text="{Saknr}"/>
            </Input>
            <core:Title text=" "/>
            <Label text="Descrizione"/>
            <Input id="DescCentroCosto" type="Text"/>
            <Label text="Descrizione"/>
            <Input id="DescCoGe" type="Text"/>
        </f:content>
        </f:SimpleForm>
        <f:SimpleForm
            id="ImportoLiquidazione"
            title="Importo Liquidazione"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="6"
            labelSpanL="6"
            labelSpanM="6"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="2"
            columnsL="3"
            columnsXL="3"
            singleContainerFullSize="false"
        >
        
        <f:content>
            <Label text="Importo di Liquidazione"/>
            <Input type="Text" id="InputImpLiq"/>

        </f:content>
    </f:SimpleForm>
        </VBox>
        </core:FragmentDefinition>