<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:u="sap.ui.unified"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:menu="sap.m.MenuItem"
    xmlns:menBtn="sap.m.Menu"
    height="100%"
    controllerName="project1.controller.aImpegno"
>
    <App id="app">
        <f:DynamicPage showFooter="true">
            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout class="sapUiMediumMarginEnd">
                            <ObjectAttribute title="Location" text="Warehouse A" />
                            <ObjectAttribute title="Halway" text="23L" />
                            <ObjectAttribute title="Rack" text="34" />
                        </layout:VerticalLayout>

                        <layout:VerticalLayout>
                            <ObjectAttribute title="Availability" />
                            <ObjectStatus text="In Stock" state="Success" />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>

                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <VBox class="sapUiSmallMargin">
                    <form:SimpleForm
                        id="SimpleFormChangeColumn__threeGroups234"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="6"
                        labelSpanL="7"
                        labelSpanM="6"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsM="2"
                        columnsL="4"
                        columnsXL="4"
                        singleContainerFullSize="false"
                    >
                        <f:content>
                            <core:Title text=" " />
                            <Label text="Esercizio di Gestione" required="true" />
            
                            <ComboBox id="mese1">
                                <core:Item id="mese2" key="{respModel>matricola}"
                                    text="{respModel>cognome} {respModel>nome} {respModel>matricola}" />
                            </ComboBox>
            
                            <Label text="N. Decreto" class="sapUiTinyMarginBottom"
                                labelFor="inputDecreto" />
            
                            <Input id="inputDecreto" type="Text" showValueHelp="true"
                                enabled="true" editable="true" />
                            <core:Title text=" " />
            
                            <Label text="Amministrazione" class="sapUiTinyMarginBottom"/>
                            <Input id="inputAmm" type="Text" enabled="true" showValueHelp="true"/>
            
                            <Label text="IPE" class="sapUiTinyMarginBottom" />
            
                            <Input id="inputIPE" type="Text" showValueHelp="true" enabled="true"
                                editable="true" />
                            <core:Title text=" " />
                            <Label text="Ufficio I Livello" class="sapUiTinyMarginbottom" required="false" />
            
                            <Input id="inputaUff" type="Text" enabled="true" showValueHelp="true" editable="true" />
                            <Label text="N. Clausola" class="sapUiTinyMarginBottom" />
                            <Input id="inputClaus" type="Text" enabled="true" showValueHelp="true"
                                editable="true" />
                                <core:Title text=" " />
                                <Label text="Ufficio II Livello" class="sapUiTinyMarginBottom" required="false"  />
                                <Input id="inputbUff" type="Text" enabled="true" showValueHelp="true"
                                    editable="true" />
                                </f:content>
                    </form:SimpleForm>
                
                        <form:SimpleForm
                        id="SimpleFormChangeColumn__threeGroups234-1"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="6"
                        labelSpanL="7"
                        labelSpanM="6"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsM="1"
                        columnsL="1"
                        columnsXL="1"
                        singleContainerFullSize="false"
                    >
                    <f:content>
                            <OverflowToolbar>
                                <ToolbarSpacer/>
                            <Button type="Emphasized" id="Avvio" text="Avvio" press="onSearch"/>
                        </OverflowToolbar>
                    </f:content>
                    </form:SimpleForm>
                </VBox>
                <core:Fragment fragmentName="project1.fragment.tableAssImp" type="XML" />
            </f:content>
            <f:footer>
                <OverflowToolbar>
                    <Button text="Indietro" type="Emphasized" press="onBackButton" />
                    <ToolbarSpacer />
                    <Button type="Emphasized" text="Calcola" press="onCalcNI" />
                </OverflowToolbar>
            </f:footer>
        </f:DynamicPage>
    </App>
</mvc:View>